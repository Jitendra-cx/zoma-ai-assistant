SESSION_DOMAIN=localhost

# Application
NODE_ENV=development
PORT=7700
API_URL=http://localhost:7700/api
WEB_APP_URL=http://localhost:7701
API_VERSION=v1

JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zoma_dev?schema=public
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=zoma_dev

# Redis (for rate limiting and caching)
REDIS_URL=redis://redis:6379
REDIS_TTL_SESSIONS=3600
REDIS_TTL_CACHE=86400

# LLM Providers
OPENAI_API_KEY=
CLAUDE_API_KEY=
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# Default LLM Provider
DEFAULT_LLM_PROVIDER=gemini
LLM_FALLBACK_PROVIDERS=claude,gemini
USE_MOCK_LLM_PROVIDER=true

# Rate Limiting
AI_RATE_LIMIT_USER_REQUESTS=50
AI_RATE_LIMIT_USER_TOKENS=1000
AI_RATE_LIMIT_ORG_COST=1.00
AI_RATE_LIMIT_WINDOW_HOURS=1

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=0.8

# Logging
LOG_LEVEL=info

